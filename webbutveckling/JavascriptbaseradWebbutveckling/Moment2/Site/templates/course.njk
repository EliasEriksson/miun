{% extends "templates/base.njk" %}

{% block head %}
    <script src="{{ staticRoot }}/js/course.js" type="module"></script>
{% endblock %}

{% block content %}
    <main>
        <form id="course-form">
            <label>
                Kurs id:
                <input name="courseId" type="text" value="{{ course.courseId }}">
            </label>
            <label>
                Kursnamn:
                <input name="courseName" type="text" value="{{ course.courseName }}">
            </label>
            <label>
                Period:
                <input name="coursePeriod" type="number" value="{{ course.coursePeriod }}">
            </label>
            <div class="submit-buttons">
                <input id="update" class="button" name="update-button" type="submit" value="Uppdatera">
                <input id="delete" class="button" name="delete-button" type="submit" value="Radera">
            </div>
        </form>
    </main>
{% endblock %}